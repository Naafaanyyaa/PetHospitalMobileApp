@page "/registration"
@inherits PetHospitalMobileApp.Components.Common.BaseComponent

<div class="container p-3">
    <EditForm Model="RegistrationModel" OnValidSubmit="OnSubmitAsync">
        <DataAnnotationsValidator />
        <ValidationSummary />
        <h1>
            @Translate["Registration"]
        </h1>
        <MessagesView Messages="Messages" Errors="Errors"></MessagesView>
        <div class="form-group mb-2">
            <label for="email" class="h5">
                @Translate["Firstname"]
            </label>
            <input class="form-control col-6" name="email" type="text" @bind-value="RegistrationModel.Firstname" required />
        </div>
        <div class="form-group mb-2">
            <label for="password" class="h5">
                @Translate["Lastname"]
            </label>
            <input class="form-control col-4" name="password" type="text" @bind-value="RegistrationModel.Lastname" required />
        </div>
        <div class="form-group mb-2">
            <label for="password" class="h5">
                @Translate["UserName"]
            </label>
            <input class="form-control col-4" name="password" type="text" @bind-value="RegistrationModel.UserName" required />
        </div>
        <div class="form-group mb-2">
            <label for="password" class="h5">
                @Translate["Email"]
            </label>
            <input class="form-control col-4" name="password" type="email" @bind-value="RegistrationModel.Email" required />
        </div>
        <div class="form-group mb-2">
            <label for="password" class="h5">
                @Translate["Password"]
            </label>
            <input class="form-control col-4" name="password" type="password" @bind-value="RegistrationModel.Password" required />
        </div>
        <button class="btn btn-primary mt-2" type="submit">@Translate["Registration"]</button>
    </EditForm>
</div>