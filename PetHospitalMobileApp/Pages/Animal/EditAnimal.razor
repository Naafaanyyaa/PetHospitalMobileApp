@page "/update-animal/{AnimalId}"
@inherits PetHospitalMobileApp.Components.Common.BaseComponent
<div class="container">
    <div class="row">
        <div class="col-12 mb-3">
            <div class="card">
                <div class="card-header">@Translate["profile.personal.header"]</div>
                <div class="card-body">
                    <div class="form-group">
                        <label for="userNameInput">@Translate["AnimalName"]</label>
                        <input id="userNameInput" class="form-control" @bind="@_animalUpdateRequest.AnimalName" />
                    </div>
                    <div class="form-group">
                        <label for="emailInput">@Translate["AnimalDescription"]</label>
                        <input id="emailInput" class="form-control" @bind="@_animalUpdateRequest.AnimalDescription" />
                    </div>
                    <div class="form-group">
                        <label for="firstNameInput">@Translate["AnimalType"]</label>
                        <input id="firstNameInput" class="form-control" @bind="@_animalUpdateRequest.AnimalType" />
                    </div>
                </div>
                <div class="card-footer">
                    <button class="btn btn-primary" @onclick="OnAnimalUpdate">Submit</button>
                    <a href="/animal-list" class="btn btn-secondary">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</div>